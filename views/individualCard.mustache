<!DOCTYPE html>
<html>
  <head>
    <meta charset="utf-8">
    <title>update card</title>
  </head>
  <body>
    {{#myCards}}
    <form class="cardinfo" action="/{{_id}}" method="post">
      <input type="text" name="cardName" value="{{name}}" placeholder="Card Name">
      <input type="text" name="cardMultiId" value="{{multiverseid}}" placeholder="Multiverse ID">
      <input type="text" name="_set" value="{{_set}}" placeholder="Set Name">
      <select class="" name="colorId">
        <option value="W">White</option>
        <option value="U">Blue</option>
        <option value="B">Black</option>
        <option value="R">Red</option>
        <option value="G">Green</option>
      </select>
       <button type="submit" name="button">Update Me</button>
    </form>
    <!-- <form class="" action="/" method="post">
      <button type="submit" name="button">delete</button>
    </form> -->
    {{/myCards}}
  </body>
</html>
